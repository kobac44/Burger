<div class="container">
    <div class="jumbotron" id="jumbo">
        <h1> Burger Time!</h1>
        {{!-- <img src="../Public/assets/img/pngfuel.com.png" alt="png" width="160px" class=" center"> --}}
        <p>Enjoy our Wonderful Burgers! Devour a Wonderful Burger!</p>
        <h2>Make Your Own Burger</h2>
    </div>
    <br>
    <form class="create-form">
        <div class="form-group">
            <label type="burgerbox">Make a Burger</label>
            <input type="text" id="burgerbox" name="burger">
            <button type="submit" class="btn btn-warning" id=""></button>
        </div>
    </form>
    <panel>
        <div class="col-md-6 text-center" class="task">
            <div class="row">
                {{#each burgers}}
                {{#unless devoured}}

                <div class="col-md-9 text-center">
                    <span><strong>{{this.id}}. {{this.burger_name}}</strong></span>

    </panel>

    <div class="col-md-3 text-center">
        <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
            <input input type="hidden" class="burger_id" type="text" value={{this.id}}>
            <button type="submit" class="devour-burger btn btn-default">Devour it></button>
        </button>
        </form>
    </div>
    {{/unless}}
    {{/each}}
</div>
</div>
<div class="col-md-6">
    <h2>Burgers Eaten!</h2>
    <ul>
        {{#each burger}}
        {{#if devoured}}
        <p>
            {{name}}
            <button class="delete" data-id="{{id}}">
                {{#if devoured}}Delete {{/if}}
            </button>
        </p>
        {{/if}}
        {{/each}}
    </ul>
</div>
</div>

</div>
</div>
</div>